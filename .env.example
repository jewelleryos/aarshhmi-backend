# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/indian_jewel

# Admin JWT
ADMIN_AUTH_JWT_SECRET=your-admin-jwt-secret-here
ADMIN_PASSWORD_RESET_JWT_SECRET=your-password-reset-jwt-secret-here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Aarshhmi <noreply@aarshhmi.com>

# Frontend
FRONTEND_URL=http://localhost:3000

# Bunny.net Storage
BUNNY_STORAGENAME=your-storage-zone-name/
BUNNY_STORAGEKEY=your-storage-zone-api-key
BUNNY_STORAGEAPI=https://sg.storage.bunnycdn.com/
BUNNY_PULLAPI=https://your-cdn-url.com/
BUNNY_ACCESSKEY=your-global-api-key

# ==========================================
# Customer Authentication Configuration
# ==========================================

# Customer JWT (separate from admin)
CUSTOMER_AUTH_JWT_SECRET=your-customer-jwt-secret-min-32-chars
CUSTOMER_JWT_EXPIRY=30d

# ==========================================
# Google OAuth 2.0 Configuration
# ==========================================

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/customer/auth/google/callback

# ==========================================
# Facebook OAuth Configuration (Future)
# ==========================================

# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
# FACEBOOK_REDIRECT_URI=http://localhost:3000/api/customer/auth/facebook/callback

# ==========================================
# Storefront URL (for OAuth redirects)
# ==========================================

STOREFRONT_URL=http://localhost:3002
